<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".page.CarShowActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_splash_bg" />

    <ImageView
        android:layout_width="210.92dp"
        android:layout_height="37.44dp"
        android:src="@mipmap/ic_logo"
        android:layout_marginLeft="51.5dp"
        android:layout_marginTop="34.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_subject"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="64sp"
        android:textColor="#FFFFFF"
        android:text="第20届车展"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintBottom_toTopOf="@id/tv_subject"
        app:layout_constraintLeft_toLeftOf="@id/tv_subject"
        app:layout_constraintRight_toRightOf="@id/tv_subject"
        android:layout_marginBottom="16.5dp"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:text="2023年"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>